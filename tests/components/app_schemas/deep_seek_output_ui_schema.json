{
  "$id": "https://example.com/schemas/OpenAICompatibleAPI.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenAI-Compatible API Object",
  "description": "Schema for a single parsed OpenAI-compatible API object.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "pattern": "API$"
    },
    "Api Base Path": {
      "type": "string"
    },
    "Api Type": {
      "type": "string"
    },
    "Base Path": {
      "type": "string"
    },
    "Connection Timeout": {
      "type": ["string", "integer"]
    },
    "Endpoint Url": {
      "type": "string"
    },
    "Hostname": {
      "type": "string"
    },
    "Openai Api Type": {
      "type": "string",
      "enum": ["chat", "embeddings", "completions", "images", "audio"]
    },
    "Port": {
      "type": ["string", "integer"]
    },
    "Protocol": {
      "type": "string",
      "enum": ["http", "https"]
    },
    "Hugging Face Model": {
      "type": "object",
      "properties": {
        "Hugging Face Model Name": {
          "type": "string"
        },
        "__type__": {
          "type": "string",
          "enum": ["HuggingFaceModel"]
        },
        "Secret": {
          "type": ["string", "null"]
        },
        "Hugging Face Cache": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "Hugging Face Model Name",
        "__type__"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "title",
    "Api Base Path",
    "Api Type",
    "Base Path",
    "Connection Timeout",
    "Endpoint Url",
    "Hostname",
    "Openai Api Type",
    "Port",
    "Protocol",
    "Hugging Face Model"
  ],
  "additionalProperties": false
}
