{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Shell Template Configuration Schema",
  "type": "object",
  "properties": {
    "display_name": {
      "type": "string",
      "description": "Human-readable name of the deployment."
    },
    "template_name": {
      "type": "string",
      "description": "Name of the deployment template, e.g. 'shell'."
    },
    "template_version": {
      "type": "string",
      "pattern": "^v\\d+\\.\\d+\\.\\d+$",
      "description": "Template version, e.g. v25.8.0."
    },
    "input": {
      "type": "object",
      "properties": {
        "networking": {
          "type": "object",
          "properties": {
            "ingress_http": {
              "type": "object",
              "properties": {
                "auth": {
                  "anyOf": [
                    {
                      "type": "boolean",
                      "description": "Enable/disable HTTP authentication."
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["apolo_auth", "no_auth"],
                          "description": "Apolo platform authentication type."
                        }
                      },
                      "required": ["type"],
                      "additionalProperties": false
                    }
                  ]
                }
              },
              "required": ["auth"],
              "additionalProperties": false
            }
          },
          "required": ["ingress_http"],
          "additionalProperties": false
        },
        "preset": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "enum": ["cpu-micro", "cpu-medium", "cpu-large"],
              "description": "Resource preset configuration."
            }
          },
          "required": ["name"],
          "additionalProperties": false
        }
      },
      "required": ["networking", "preset"],
      "additionalProperties": false
    }
  },
  "required": ["display_name", "template_name", "template_version", "input"],
  "additionalProperties": false
}
